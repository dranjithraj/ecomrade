<%= form_with(model: company) do |form| %>
  <% if company.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(company.errors.count, "error") %> prohibited this company from being saved:</h2>

      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group ">
    <%= form.label t("company.lable.name"), style: "display: block", class:"form-label mb-12", for:"formName" %>
    <%= form.text_field :name , placeholder: t("company.placeholder.name") , class:"form-control"%>
  </div>

  <div class="form-group ">
    <%= form.label t("company.lable.description"), style: "display: block", class:"form-label mb-12", for:"formDescription"  %>
    <%= form.text_field :description, placeholder: t("company.placeholder.description"), id:"formDescription" , class:"form-control"%>
  </div>

  <div class="form-group ">
    <%= form.label t("company.lable.code"), style: "display: block", class:"form-label mb-12", for:"formCode" %>
    <%= form.text_field :code, placeholder: t("company.placeholder.code"), id:"formCode" , class:"form-control"%>
  </div>

  <div class="form-group ">
    <%= form.label t("company.lable.logo_link"), style: "display: block", class:"form-label mb-12", for:"formLogoLink" %>
    <%= form.text_field :logo , placeholder: t("company.placeholder.logo_link"), id:"formLogoLink" , class:"form-control"%>
  </div>

  <div class="form-group "> 
    <%= form.number_field :user_id, id: :product_user_id, value: current_user.id, type: :hidden %>
  </div>  

  <div class="form-group ">
    <%= form.submit t("company.action.save"), class: 'btn btn-primary'%>
  </div>
<% end %>
