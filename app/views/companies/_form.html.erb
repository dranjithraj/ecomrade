      <ul>
        <% company.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t("company.lable.name"), style: "display: block" %>
    <%= form.text_field :name , placeholder: t("company.placeholder.name")%>
  </div>

  <div>
    <%= form.label t("company.lable.description"), style: "display: block" %>
    <%= form.text_field :description, placeholder: t("company.placeholder.description") %>
  </div>

  <div>
    <%= form.label t("company.lable.code"), style: "display: block" %>
    <%= form.text_field :code, placeholder: t("company.placeholder.code") %>
  </div>

  <div>
    <%= form.label t("company.lable.logo_link"), style: "display: block" %>
    <%= form.text_field :logo , placeholder: t("company.placeholder.logo_link")%>
  </div>

  <div>
    <%= form.label t("company.lable.user"), style: "display: block" %>
    <%= form.number_field :user_id, id: :company_user_id, value: current_user.id %>
  </div>

  <div>
    <%= form.submit t("company.action.save"), class: 'btn btn-primary'%>
