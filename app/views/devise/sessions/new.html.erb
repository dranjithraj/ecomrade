<div class="container col-sm-4">
<h2>Sign in</h2>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <!-- Email input -->
  <div class="form-outline mb-4">
    <%= f.label :email, class:"form-label" %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"form-control" %>
  </div> 

  <!-- Password input -->
  <div class="form-outline mb-4">
    <%= f.label :password, class:"form-label" %><br />
    <%= f.password_field :password, autocomplete: "current-password", class:"form-control" %>    
  </div>   

  <% if devise_mapping.rememberable? %>
   
  <div class="row mb-4">
    <div class="col d-flex justify-content-center">
      <!-- Checkbox -->
      <div class="form-check">
        <%= f.check_box :remember_me, type: :checkbox, id: :formRememberMe, class:"form-check-input" %>         
        <label class="form-check-label" for="formRememberMe"> Remember me </label>
      </div>
    </div>    
  </div>
  <% end %>

  <div class="actions">
    <%= f.submit "Log in", class:"btn btn-primary btn-block mb-4" %>
  </div>

<% end %>


<%= render "devise/shared/links" %>
</div>
 