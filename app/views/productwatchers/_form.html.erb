<%= form_with(model: productwatcher) do |form| %>
  <% if productwatcher.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(productwatcher.errors.count, "error") %> prohibited this productwatcher from being saved:</h2>

      <ul>
        <% productwatcher.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>    
    <%= form.text_field :status , type: :hidden%>
