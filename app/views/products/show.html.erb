<div class="container col-sm-8 mt-5">
  <%= render @product %>

  <% if user_signed_in?%>
  <div class="container">
    <div class="row">
      <div class="col">
      <%= render "productwatchers/watch", productwatcher: @productwatcher, locals: {product_id: @product.id}%>
      </div>
      <div class="">
      <%= button_to t("product.action.destroy"), @product, method: :delete , class: 'btn btn-danger mt-2 mb-2'%>
      </div>
    </div>
  <div>  
  <% end %>

  <div>    
    <% if user_signed_in?%>
      <%= link_to t("product.action.edit"), edit_product_path(@product) %> |    
    <% end %>
    <%= link_to t("product.action.back"), products_path %>  
  </div>
</div>