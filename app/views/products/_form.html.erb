<%= form_with(model: product) do |form| %>
  <% if product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
        <% product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label t("product.lable.name"), style: "display: block" %>
    <%= form.text_field :name, placeholder: t("product.placeholder.name")  %>
  </div>

  <div>
    <%= form.label t("product.lable.description"), style: "display: block" %>
    <%= form.text_field :description, placeholder: t("product.placeholder.description") %>
  </div>

  <div>
    <%= form.label t("product.lable.code"), style: "display: block" %>
    <%= form.text_field :code , placeholder: t("product.placeholder.code")%>
  </div>

  <div>
    <%= form.label t("product.lable.price"), style: "display: block" %>
    <%= form.number_field :price , placeholder: t("product.placeholder.price")%>
  </div>

  <div>
    <%= form.label t("product.lable.image_link"), style: "display: block" %>
    <%= form.text_field :image_link, placeholder: t("product.placeholder.image_link") %>
  </div>

  <div>
    <%= form.submit t("product.action.save"),  class: 'btn btn-primary'%>
  </div>
<% end %>
